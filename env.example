# env.example
# DMOC Web PWA - Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# NextAuth Configuration
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-super-secret-jwt-key-that-is-at-least-32-characters-long-change-this-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MySQL Database (VPS Production)
DATABASE_URL=mysql://user:password@mysql:3306/transport
MYSQL_ROOT_PASSWORD=your-secure-root-password
MYSQL_PASSWORD=your-secure-user-password

# PostgreSQL (Vercel Development) - Uncomment for Vercel
# DATABASE_URL=postgresql://username:password@host:port/database_name

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis for BullMQ and caching
REDIS_URL=redis://redis:6379

# External Redis (Vercel) - Uncomment for Vercel
# REDIS_URL=redis://username:password@host:port

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# MinIO/S3 Configuration (VPS Production)
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET=dmoc-media
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key

# External S3 (Vercel) - Uncomment for Vercel
# S3_ENDPOINT=https://your-s3-endpoint.com
# S3_REGION=us-east-1
# S3_BUCKET=your-bucket-name
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# WhatsApp API Integration
WHATSAPP_API_URL=https://api.ultramsg.com
WHATSAPP_TOKEN=your-whatsapp-token
WHATSAPP_INSTANCE_ID=your-instance-id

# Traccar GPS Tracking
TRACCAR_API_URL=https://your-traccar-instance.com/api
TRACCAR_USERNAME=your-traccar-username
TRACCAR_PASSWORD=your-traccar-password

# ANPR Service (if using external microservice)
ANPR_API_URL=http://anpr-service:8000
ANPR_API_KEY=your-anpr-api-key

# Biometrics Service (if using external microservice)
BIOMETRICS_API_URL=http://biometrics-service:8000
BIOMETRICS_API_KEY=your-biometrics-api-key

# =============================================================================
# PLATFORM-SPECIFIC CONFIGURATION
# =============================================================================

# Vercel-specific (uncomment for Vercel deployment)
# VERCEL=1
# VERCEL_URL=your-app.vercel.app

# Docker-specific (uncomment for Docker deployment)
# DOCKER=1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# CORS configuration
CORS_ORIGIN=https://your-domain.com

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Logging level
LOG_LEVEL=info

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn
# DATADOG_API_KEY=your-datadog-api-key

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development flags (set to false in production)
DEBUG=false
VERBOSE_LOGGING=false

# Hot reload (development only)
# FAST_REFRESH=true
