# DMOC Web (PWA) - Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# Database (Prisma)
# For development: SQLite (file:./dev.db)
# For production: MySQL connection string
DATABASE_URL="mysql://USER:PASSWORD@HOST:PORT/DBNAME?sslmode=REQUIRED"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-jwt-key-that-is-at-least-32-characters-long"

# Redis (for BullMQ and caching)
REDIS_URL="redis://localhost:6379"

# S3 Storage (MinIO for media files)
S3_ENDPOINT="http://localhost:9000"
S3_REGION="us-east-1"
S3_BUCKET="logistics-media"
S3_ACCESS_KEY_ID="minioadmin"
S3_SECRET_ACCESS_KEY="minioadmin"

# Webhook Secrets (for security)
TRACCAR_WEBHOOK_SECRET="traccar-secret-key"
WHATSAPP_WEBHOOK_SECRET="whatsapp-secret-key"

# UltraMsg WhatsApp Integration
# Get these from your UltraMsg dashboard
ULTRAMSG_INSTANCE_ID=""
ULTRAMSG_TOKEN=""
ULTRAMSG_SENDER_PHONE=""

# Traccar GPS Tracking (self-hosted)
# Your Traccar server details
TRACCAR_BASE_URL=""
TRACCAR_TOKEN=""

# Tive Logistics Tracking (hosted)
# Get API key from Tive platform
TIVE_API_BASE_URL="https://platform.tive.com/api"
TIVE_API_KEY=""

# Node Environment
NODE_ENV="development"
